<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE struts-config PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
 "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
    <!-- Form Bean Definitions ============================================== -->
    <form-beans>
        
        <form-bean name="loginForm"
         type="kr.co.wikibook.webtext.pentomino.form.LoginForm"/>
        
        <form-bean name="itemListForm"
         type="kr.co.wikibook.webtext.pentomino.form.ItemListForm"/>
        
        <form-bean name="dummyForm" type="org.apache.struts.action.DynaActionForm"/>
        
    </form-beans>
    
    
    <!-- Global Exception Definitions ======================================= -->
    <global-exceptions>
    </global-exceptions>
    
    
    <!-- Global Forward Definitions ========================================= -->
    <global-forwards>
        <forward name="login" path="/login.do"/>
    </global-forwards>
    
    
    <!-- Action Mapping Definitions ========================================= -->
    <action-mappings>
        <action path="/login" forward="/view/login.jsp"/>
        
        <action path="/logout"
         type="kr.co.wikibook.webtext.pentomino.action.LogoutAction"
         name="dummyForm">
            <forward name="success" path="/login.do"/>
        </action>
        
        <action path="/loginPage"
         type="kr.co.wikibook.webtext.pentomino.action.LoginPageAction"
         name="loginForm">
            <forward name="success" path="/itemListShow.do"/>
            <forward name="fail" path="/view/loginFailed.jsp"/>
        </action>
        
        <action path="/itemListShow"
         type="kr.co.wikibook.webtext.pentomino.action.ItemListShowAction" name="dummyForm">
            <forward name="show" path="/view/itemList.jsp"/>
        </action>
        
        <action path="/itemListPage"
         type="kr.co.wikibook.webtext.pentomino.action.ItemListPageAction"
         name="itemListForm" scope="request">
            <forward name="success" path="/itemListShow.do"/>
        </action>
        
        <action path="/cartShow"
         type="kr.co.wikibook.webtext.pentomino.action.CartShowAction"
         name="dummyForm">
            <forward name="success" path="/view/cart.jsp"/>
        </action>
        
        <action path="/complete" forward="/view/complete.jsp" name="dummyForm"/>
    </action-mappings>
    
    
    <!-- Controller Configuration =========================================== -->
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
    
    <!-- Message Resources Definitions ====================================== -->
    <message-resources parameter="MessageResources"/>
    
    <!-- Plug InsConfiguration ============================================== -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <!-- Path to XML definition file -->
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
        <!-- Set Module-awareness to true -->
        <set-property property="moduleAware" value="true"/>
    </plug-in>
    
    
    <!-- Validator plugin =================================================== -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
         value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
    
</struts-config>
